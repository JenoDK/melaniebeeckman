---
import { Image } from 'astro:assets'
import ProfilePicture from '@assets/profile_picture.png'
import { getLangFromUrl, translate } from '../i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';

const currentUrl = Astro.url;
const lang = getLangFromUrl(currentUrl);
const homeURL = getRelativeLocaleUrl(lang, "");
const researchUrl = getRelativeLocaleUrl(lang, "research");
const papersUrl = getRelativeLocaleUrl(lang, "papers");
const cvUrl = getRelativeLocaleUrl(lang, "cv");
const contactUrl = getRelativeLocaleUrl(lang, "contact");

---
<aside
	class='px-4 pt-4 h-screen w-[20rem] bg-base-200 text-base-content flex flex-col'
>
	<div class='flex flex-col my-8 justify-between h-full'>
		<div>
			<div class='flex justify-center items-center flex-col'>
				<Image
					class='mask mask-circle size-44'
					src={ProfilePicture}
					alt={`Profile picture of TODO`}
				/>
				<h1 class="text-lg font-black mt-8 hidden lg:block">TODO <span>TODO</span></h1>
			</div>
			<div class='mx-4 mt-16'>
				<ul class='space-y-4 menu grow shrink menu-md overflow-y-auto'>
					<li>
                        <a href={homeURL} class='text-lg'>{translate(lang, 'nav.home')}</a>
					</li>
					<li>
                        <a href={researchUrl} class='text-lg'>{translate(lang, 'nav.research')}</a>
					</li>
					<li>
                        <a href={papersUrl} class='text-lg'>{translate(lang, 'nav.papers')}</a>
					</li>
					<li>
                        <a href={cvUrl} class='text-lg'>{translate(lang, 'nav.cv')}</a>
                    </li>
					<li>
						<a href={contactUrl} class='text-lg'>{translate(lang, 'nav.contact')}</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</aside>
