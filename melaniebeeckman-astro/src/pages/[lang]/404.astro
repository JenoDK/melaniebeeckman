---
import Layout from '@layouts/Layout.astro';
import { getAsLanguage, getLanguagePaths, translate } from '../../i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';

const lang = getAsLanguage(Astro.params.lang, Astro.currentLocale);
const homeURL = getRelativeLocaleUrl(lang, "");

export function getStaticPaths() {
    return getLanguagePaths();
}
---

<Layout title="404.title" lang={lang}>
    <div class="min-h-[70vh] flex flex-col items-center justify-center text-center">
        <h1 class="text-9xl font-black text-base-content mb-4">404</h1>
        <h2 class="text-4xl font-bold text-base-content mb-8">{translate(lang, '404.title')}</h2>
        <p class="text-lg text-base-content/80 mb-8">{translate(lang, '404.description')}</p>
        <div class="flex gap-4">
            <a href={homeURL} class="btn btn-primary">
                {translate(lang, '404.goHome')}
            </a>
        </div>
    </div>
</Layout>
